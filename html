<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coin Clicker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        #coin {
            width: 100px;
            cursor: pointer;
        }
        #score {
            font-size: 24px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Click the Coin!</h1>
    <img id="coin" src="https://img.icons8.com/emoji/96/000000/coin-emoji.png" alt="coin">
    <div id="score">Score: 0</div>

    <script>
        let score = 0;
        const coin = document.getElementById('coin');
        const scoreDisplay = document.getElementById('score');

        coin.addEventListener('click', () => {
            score += 1;
            scoreDisplay.textContent = `Score: ${score}`;
        });
    </script>
</body>
</html>
